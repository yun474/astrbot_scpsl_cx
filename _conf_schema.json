{
  "servers": {
    "description": "预设的服务器列表，可在webui中添加、编辑和删除",
    "type": "list",
    "items": {
      "type": "object",
      "items": {
        "name": {
          "description": "服务器的显示名称，用于查询时识别",
          "type": "string",
          "hint": "例如：我的SCP服务器",
          "obvious_hint": true
        },
        "ip": {
          "description": "服务器的IP地址（IPv4）",
          "type": "string",
          "hint": "例如：192.168.1.1 或 1.2.3.4",
          "obvious_hint": true
        },
        "port": {
          "description": "服务器的端口号，默认为7777",
          "type": "int",
          "default": 7777,
          "minimum": 1,
          "maximum": 65535,
          "hint": "通常为7777或7778"
        }
      },
      "required": ["name", "ip"]
    },
    "default": [
      {
        "name": "horizon一服",
        "ip": "180.188.21.179",
        "port": 7777
      }
    ]
  }
}
